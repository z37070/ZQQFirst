<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="5dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/textview_item_community1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community1_value"
            android:textColor="#939292"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline78"
            card_view:layout_constraintStart_toStartOf="@+id/guideline70"
            card_view:layout_constraintTop_toTopOf="@+id/guideline72" />

        <TextView
            android:id="@+id/textview_item_community2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community2_value"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline79"
            card_view:layout_constraintStart_toStartOf="@+id/guideline77"
            card_view:layout_constraintTop_toTopOf="@+id/guideline78" />

        <TextView
            android:id="@+id/textview_item_community3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community3_value"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline80"
            card_view:layout_constraintStart_toStartOf="@+id/guideline77"
            card_view:layout_constraintTop_toTopOf="@+id/guideline79" />

        <TextView
            android:id="@+id/textview_item_community4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community4_value"
            android:textColor="@color/textviewcolor_welcome3"
            android:textSize="19sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline83"
            card_view:layout_constraintStart_toStartOf="@+id/guideline77"
            card_view:layout_constraintTop_toTopOf="@+id/guideline80" />

        <TextView
            android:id="@+id/textview_item_community5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community5_value"
            android:textColor="#939292"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline78"
            card_view:layout_constraintStart_toEndOf="@+id/textview_item_community1"
            card_view:layout_constraintTop_toTopOf="@+id/guideline72" />

        <TextView
            android:id="@+id/textview_item_community6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community6_value"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline79"
            card_view:layout_constraintStart_toEndOf="@+id/textview_item_community2"
            card_view:layout_constraintTop_toTopOf="@+id/guideline78" />

        <TextView
            android:id="@+id/textview_item_community7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community7_value"
            android:textSize="15sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline80"
            card_view:layout_constraintStart_toEndOf="@+id/textview_item_community3"
            card_view:layout_constraintTop_toTopOf="@+id/guideline79" />

        <TextView
            android:id="@+id/textview_item_community8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_item_community8_value"
            android:textColor="@color/textviewcolor_welcome3"
            android:textSize="19sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline83"
            card_view:layout_constraintStart_toEndOf="@+id/textview_item_community4"
            card_view:layout_constraintTop_toTopOf="@+id/guideline80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.07" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.23" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.67" />


        <Button
            android:id="@+id/button_item_community1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/button_item_community1"
            android:text="@string/button_item_community1_value"
            android:textColor="#fff"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline83"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline82"
            card_view:layout_constraintTop_toTopOf="@+id/guideline80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.93" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#cecece"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline78"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageview_item_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/other"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline78"
            card_view:layout_constraintStart_toStartOf="@+id/guideline77"
            card_view:srcCompat="@drawable/image_item_community"
            tools:ignore="VectorDrawableCompat" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.93" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>